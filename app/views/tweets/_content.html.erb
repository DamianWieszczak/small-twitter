<div class="column is-half">

  <% @tweets.each do |tweet| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/128x128.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= tweet.user.name %></strong><br>
            <small><%= tweet.user.username %></small><br>
            <p><%= tweet.tweet %></p>
          </div>
          <% if user_signed_in? %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to tweet, class: "level-item" do %>
                  <span class="icon"><i class="fa fa-external-link" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to tweet, method: :delete, data: { confirm: "Are you sure?" } do %>
                  <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class="media-content"
      <%= render 'form' %>
    </div>
    </article>
  <% end %>

</div>