
<%= simple_form_for(@tweet) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field>
    <div class="control">
    <%= f.input :tweet, label: "Tweet about that", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Tweet your thoughts...", autofocus: true %>
    </div>
    <br>
    <%= f.button :submit, class: "button is-success" %>
  </div>
<% end %>


